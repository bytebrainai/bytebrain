{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/stories/**/*.tsx",
    "index.d.ts",
  ],
  "exclude": ["node_modules", "dist", "*.stories.js"]
}
